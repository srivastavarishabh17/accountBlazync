<%- include('partials/header', { title: 'Manage Products' }) %>

<div class="max-w-7xl mx-auto p-6">
  <div class="text-2xl font-bold mb-4">Manage Products</div>
  <div class="flex justify-between mb-4">
    <a href="/products/create" class="px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700">Add New Product</a>
  </div>

  <div class="space-y-4">
    <div class="bg-white shadow p-4 rounded-lg">
      <h3 class="text-xl font-semibold mb-2">Product List</h3>
      <table class="w-full table-auto">
        <thead>
          <tr class="bg-gray-100">
            <th class="py-2 px-4">Product Name</th>
            <th class="py-2 px-4">Actions</th>
          </tr>
        </thead>
        <tbody>
          <!-- Here you will loop through the products and display them -->
          <% products.forEach(product => { %>
            <tr>
              <td class="py-2 px-4"><%= product.name %></td>
              <td class="py-2 px-4">
                <a href="/products/edit/<%= product._id %>" class="text-indigo-600 hover:text-indigo-800">Edit</a>
                <a href="/products/delete/<%= product._id %>" class="text-red-600 hover:text-red-800 ml-4">Delete</a>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
